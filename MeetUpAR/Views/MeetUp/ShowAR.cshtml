@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="@Configuration["MeetUpSettings:SiteLogo"]" />

    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">

    <meta property="og:title" content="@Configuration["MeetUpSettings:SiteName"]" />
    <meta property="og:url" content="@Configuration["MeetUpSettings:LinkPreviewURL"]" />
    <meta property="og:image" content="@($"{Configuration["MeetUpSettings:BaseURL"]}{Configuration["MeetUpSettings:LinkPreviewImage"]}")" />
    <meta property="og:description" content="@Configuration["MeetUpSettings:LinkPreviewDescription"]" />
    <meta property="og:type" content="@Configuration["MeetUpSettings:SiteName"]">
    <meta property="og:site_name" content="@Configuration["MeetUpSettings:SiteName"]">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@Configuration["MeetUpSettings:SiteName"]">
    <meta name="twitter:image" content="@($"{Configuration["MeetUpSettings:BaseURL"]}{Configuration["MeetUpSettings:LinkPreviewImage"]}")">
    <meta name="twitter:description" content="@Configuration["MeetUpSettings:LinkPreviewDescription"]">

    <title>@Configuration["MeetUpSettings:SiteName"]</title>
    <script src="https://aframe.io/releases/1.3.0/aframe.min.js"></script>
    <script src="https://cdn.rawgit.com/AR-js-org/AR.js/3.4.5/aframe/build/aframe-ar.js"></script>
    <style>
        body, html {
            margin: 0;
            overflow: hidden;
            height: 100%;
        }
    </style>
</head>
<body>
    <a-scene vr-mode-ui="enabled: false" embedded arjs='sourceType: webcam; debugUIEnabled: false'>
        <!-- Camera -->
        <a-camera gps-camera></a-camera>

        <!-- 3D Box Object -->
        <a-entity geometry="primitive: cylinder" material="color: yellow"
                  gps-entity-place="latitude: @ViewBag.Latitude; longitude: @ViewBag.Longitude; static: true;"
                  scale="3 15 3"
                  position="0 -1 0">
        </a-entity>

        <!-- Image Object -->
        @* <a-image gps-entity-place="latitude: @ViewBag.Latitude; longitude: @ViewBag.Longitude; static: true;"
        src="/images/ARobj/ARobj1.png"
        scale="8 4 8">
        </a-image> *@

        <!-- Replace the path with your glTF model's path -->
        @* <a-entity gps-entity-place="latitude: @ViewBag.Latitude; longitude: @ViewBag.Longitude; static: true;"
        gltf-model="/images/model/emi.glb"
        scale="6 4 6"
        rotation="0 0 0"
        position="0 0 0">
        </a-entity> *@

    </a-scene>
</body>
</html>

