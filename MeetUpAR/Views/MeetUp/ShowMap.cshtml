@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<style>
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f0f0f0;
        overflow: hidden;
        background-color: #17647E;
    }

    .loading-container {
        animation: fadeInOut 1s linear infinite;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @@keyframes fadeInOut {
        0% {
            opacity: 0;
        }

        50% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }

    .loading-image {
        min-width: 150px;
        max-width: 300px;
        min-height: 300px;
        max-height: 450px;
    }
</style>

<div class="loading-container">
    <img src="@Configuration["MeetUpSettings:SiteLogo"]" alt="Loading Animation" class="loading-image">
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            window.location.href = "@ViewBag.RedirectUrl";
        }, 1000);
    </script>
}